@model Eshoppe.Models.Category
<form asp-action="Delete" method="post">
    <input hidden asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" disabled class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DisplayOrder" class="control-label"></label>
        <input asp-for="DisplayOrder" disabled class="form-control" />
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Delete" class="btn btn-primary" />
        <a asp-controller="Category" asp-action="Index" class="btn btn-link">Back to List</a>
    </div>
</form>
